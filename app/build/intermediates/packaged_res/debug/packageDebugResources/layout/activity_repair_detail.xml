<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F6FA"
    tools:context=".ui.RepairDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- 顶部标题卡 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:elevation="2dp"
            android:radius="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="工单详情"
                    android:textColor="#111827"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="查看工单状态与处理人"
                    android:textColor="#6B7280"
                    android:textSize="14sp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- 概要信息卡：标题/状态/师傅 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:elevation="2dp"
            android:radius="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- 工单标题 -->
                <TextView
                    android:id="@+id/text_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="工单"
                    android:textColor="#111827"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="灯泡 - 1号楼2层203" />

                <!-- 状态标签 -->
                <TextView
                    android:id="@+id/text_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="#EEF2FF"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:text="状态"
                    android:textColor="#1F2937"
                    android:textSize="12sp"
                    tools:text="处理中" />

                <!-- 接单师傅 -->
                <TextView
                    android:id="@+id/text_handler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="接单师傅"
                    android:textColor="#6B7280"
                    android:textSize="13sp"
                    tools:text="接单师傅：师傅A" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- 描述卡 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:elevation="2dp"
            android:radius="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="问题描述"
                    android:textColor="#111827"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="描述"
                    android:textColor="#374151"
                    android:textSize="14sp"
                    tools:text="宿舍灯泡坏了，晚上无法照明，请尽快处理。" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- 提示信息（你代码会控制显示/隐藏） -->
        <TextView
            android:id="@+id/text_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="#FFF7ED"
            android:padding="12dp"
            android:text="提示"
            android:textColor="#9A3412"
            android:textSize="13sp"
            android:visibility="gone"
            tools:visibility="visible"
            tools:text="已由 师傅A 接单，非接单师傅不可操作" />

        <!-- 操作区（按钮你代码会控制显示/隐藏） -->
        <Button
            android:id="@+id/button_claim"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:backgroundTint="#2563EB"
            android:text="接单"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold"
            android:visibility="gone"
            tools:visibility="visible" />

        <Button
            android:id="@+id/button_done"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#16A34A"
            android:text="标记已完成"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold"
            android:visibility="gone"
            tools:visibility="visible" />

    </LinearLayout>

</ScrollView>
