<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.repairapp">

    <application
        android:allowBackup="true"
        android:label="RepairApp"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <!-- 启动页：必须有 MAIN + LAUNCHER，且 exported=true -->
        <activity
            android:name=".ui.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".ui.RepairListActivity"
            android:exported="false" />
        <activity
            android:name=".ui.SubmitRepairActivity"
            android:exported="false" />
        <activity
            android:name=".ui.RepairDetailActivity"
            android:exported="false" />

        <service
            android:name=".service.WorkerPollingService"
            android:exported="false" />

        <provider
            android:name=".provider.RepairProvider"
            android:authorities="com.example.repairapp.repair.provider"
            android:exported="false" />
    </application>

</manifest>
